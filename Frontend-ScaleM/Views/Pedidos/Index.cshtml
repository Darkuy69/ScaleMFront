@{
    ViewData["Title"] = "Gestión de Pedidos";
    ViewData["ActivePage"] = "Pedidos";
}

<div class="container mt-4">
    <h1 class="fw-bold mb-4">Gestión de Pedidos</h1>

    <!-- Formulario de creación de pedido -->
    <div class="card card-custom shadow-lg border-0 rounded-3 mb-4">
        <div class="card-body">
            <h5 class="card-title">Crear Pedido</h5>
            <form method="post" asp-action="CrearPedido">
                <div class="mb-3">
                    <label for="clienteId" class="form-label">ID Cliente</label>
                    <input type="text" class="form-control" id="clienteId" name="ClienteId" placeholder="Ej: 001" required>
                    @* Aquí se podría cambiar el input por un select que cargue clientes desde la BD *@
                </div>
                <div class="mb-3">
                    <label for="fechaPedido" class="form-label">Fecha del Pedido</label>
                    <input type="date" class="form-control" id="fechaPedido" name="FechaPedido" required>
                </div>
                <div class="mb-3">
                    <label for="estado" class="form-label">Estado</label>
                    <select class="form-select" id="estado" name="Estado">
                        <option>Pendiente</option>
                        <option>Entregado</option>
                        <option>Cancelado</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Crear</button>
            </form>
        </div>
    </div>

    <!-- Agregar productos al pedido -->
    <div class="card card-custom shadow-lg border-0 rounded-3 mb-4">
        <div class="card-body">
            <h5 class="card-title">Agregar Producto al Pedido</h5>
            <form method="post" asp-action="AgregarProducto">
                <div class="row">
                    <div class="col-md-6">
                        <label for="producto" class="form-label">Producto</label>
                        <select class="form-select" id="producto" name="ProductoId">
                            @* Aquí iría un foreach para cargar los productos desde la BD *@
                            <option value="">Selecciona un producto</option>
                            @* Ejemplo:
                            @foreach (var prod in Model.Productos) {
                                <option value="@prod.Id">@prod.Nombre</option>
                            }
                            *@
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="cantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="cantidad" name="Cantidad" min="1">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-success w-100">Agregar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de pedidos recientes -->
    <div class="card card-custom shadow-lg border-0 rounded-3">
        <div class="card-body">
            <h5 class="card-title">Pedidos Recientes</h5>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @* Aquí se iteran los pedidos desde el modelo *@
                    @* Ejemplo:
                    @foreach (var pedido in Model.Pedidos) {
                        <tr>
                            <td>@pedido.Id</td>
                            <td>@pedido.ClienteNombre</td>
                            <td>@pedido.Fecha.ToString("yyyy-MM-dd")</td>
                            <td>@pedido.Estado</td>
                        </tr>
                    }
                    *@
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .card-custom {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .card-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
</style>
