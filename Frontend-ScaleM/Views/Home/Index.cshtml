@{
    ViewData["Title"] = "Inicio";
    ViewData["ActivePage"] = "Home";  // Establece la página activa
}

<div class="container">
    <div class="row">
        <!-- Sección principal (Hero Section) -->
        <div class="col-md-8">
            <!-- Título y subtítulo -->
            <h1 id="Titulo" class="fw-bold">Diseño Atemporal</h1>
            <h1 id="Titulo2" class=" fw-bold">Materiales Premium</h1>
            <p>Ya sea que prefieras el minimalismo moderno, los clásicos<p/> 
             <p></p>atemporales o las piezas audaces y llamativas.</p>

            <!-- Cualidades -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <h5 class="features-title">
                        <span class="feature-item">Calidad</span> 
                        <span class="feature-item">Exclusividad</span> 
                        <span class="feature-item">Versatilidad</span> 
                        <span class="feature-item">Innovación</span> 
                        <span class="feature-item">Estilo</span>
                    </h5>
                </div>
            </div>

            <div class="row mt-4">
                <!-- Demanda por Producto -->
                <div class="col-md-6">
                    <div class="card card-custom shadow-lg border-0 rounded-3">
                        <div class="card-body">
                            <!-- Título del card -->
                            <h5 class="card-title text-center text-dark mb-4" style="font-weight: 600;">Demanda por Producto</h5>

                            <!-- Tabla -->
                            <table class="table table-striped table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Categoría</th>
                                        <th scope="col">Producto</th>
                                        <th scope="col">Porcentaje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Coches a escala</td>
                                        <td>Vehículo</td>
                                        <td><span class="badge bg-info">45%</span></td>
                                    </tr>
                                    <tr>
                                        <td>Motos a escala</td>
                                        <td>Vehículo</td>
                                        <td><span class="badge bg-info">30%</span></td>
                                    </tr>
                                    <tr>
                                        <td>Modelos exclusivos</td>
                                        <td>Modelo</td>
                                        <td><span class="badge bg-info">15%</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


                <!-- Rendimiento -->
                <div class="col-md-6">
                    <div class="card card-custom shadow-lg border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="card-title text-center text-dark mb-4" style="font-weight: 600;">Rendimiento</h5>

                            <!-- Slider de progreso -->
                            <div class="progress-container mb-4">
                                <p><strong>Progreso de ventas</strong></p>
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                                        75%
                                    </div>
                                </div>
                            </div>

                            <!-- Botón interactivo que muestra información al hacer clic -->
                            <button class="btn btn-info w-100" data-bs-toggle="collapse" data-bs-target="#performanceInfo" aria-expanded="false" aria-controls="performanceInfo">
                                Ver detalles de rendimiento
                            </button>
                            <div class="collapse mt-3" id="performanceInfo">
                                <div class="card card-body">
                                    <p><strong>Rendimiento anual:</strong> El rendimiento de este año ha aumentado un 25% comparado con el año anterior.</p>
                                    <p><strong>Áreas destacadas:</strong> Ventas de productos exclusivos y modelos a escala han crecido significativamente.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Demanda por Producto (Cliente, Empleado, Pago) -->
              
            </div>
            @* <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card card-custom mt-4">
                        <h5>Demanda por Producto</h5>
                        <p><strong>Clientes:</strong> contacto, historial de compras.</p>
                        <p><strong>Empleados:</strong> desempeño, horarios, roles.</p>
                        <p><strong>Pagos:</strong> registro: pagos, métodos, fechas.</p>
                    </div>

                </div>
            </div> *@
        </div>

        <!-- Sidebar Section -->

        <div class="col-md-4" style="margin-top: 300px;">
            <!-- Ventas del Mes -->
            <div class="card card-custom shadow-lg border-0 rounded-3">
                <div class="card-body">
                    <h5 class="card-title text-center text-dark mb-4" style="font-weight: 600;">Ventas del Mes</h5>

                    <!-- Información -->
                    <p class="card-text"><strong>Total de Ventas:</strong> <span class="highlight" style="color: #28a745; font-weight: bold;">€10,350</span></p>
                    <p class="card-text"><strong>Comparación:</strong> <span class="highlight" style="color: #ff4500; font-weight: bold;">+15% respecto al mes pasado</span></p>
                </div>
            </div>
        </div>



    </div>
</div>

<style>

    /* Estilos del card */
    .card-custom {
        background-color: #ffffff; /* Fondo blanco */
        border-radius: 15px; /* Bordes redondeados */
        padding: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Animación para hover */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
    }

        .card-custom:hover {
            transform: translateY(-5px); /* Eleva ligeramente el card al pasar el mouse */
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); /* Aumenta la sombra */
        }

    .card-title {
        font-size: 1.25rem;
        color: #333;
    }

    .highlight {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        margin: 10px 0;
    }

    /* Mejora la visibilidad de los valores */
    .highlight {
        color: #007bff; /* Azul para los valores */
    }
    .feature-item {
        border: 2px solid #6ce5e8;
        padding: 5px 10px;
        margin-right: 10px;
        border-radius: 15px;
        display: inline-block;
    }

    #Titulo{
        font-size:60px;
        margin-top:-20px;
    }

    #Titulo2 {
        font-size: 60px;
    }

        .feature-item:hover {
            background-color: #6ce5e8;
            color: white;
        }
</style>
