@{
    ViewData["Title"] = "Reportes";
    ViewData["ActivePage"] = "Reportes";
}

<div class="container mt-4">
    <h1 class="fw-bold mb-4">Reportes de Rendimiento</h1>

    <!-- Reporte de Ventas -->
    <div class="card card-custom shadow-lg border-0 rounded-3 mb-4">
        <div class="card-body">
            <h5 class="card-title">Ventas Totales</h5>
            <p><strong>Monto Total:</strong> @* Ej: @Model.TotalVentas.ToString("C") *@</p>
            <p><strong>Comparación con el mes anterior:</strong> @* Ej: @Model.VariacionVentas % *@</p>
        </div>
    </div>

    <!-- Reporte por Producto -->
    <div class="card card-custom shadow-lg border-0 rounded-3 mb-4">
        <div class="card-body">
            <h5 class="card-title">Productos Más Vendidos</h5>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad Vendida</th>
                        <th>Ingresos Generados</th>
                    </tr>
                </thead>
                <tbody>
                    @* Ejemplo con datos de la BD:
                    @foreach (var prod in Model.ProductosMasVendidos) {
                        <tr>
                            <td>@prod.Nombre</td>
                            <td>@prod.Cantidad</td>
                            <td>@prod.TotalIngresos.ToString("C")</td>
                        </tr>
                    }
                    *@
                </tbody>
            </table>
        </div>
    </div>

    <!-- Reporte de Clientes -->
    <div class="card card-custom shadow-lg border-0 rounded-3">
        <div class="card-body">
            <h5 class="card-title">Clientes Activos</h5>
            <p><strong>Total Clientes:</strong> @* Ej: @Model.TotalClientes *@</p>
            <p><strong>Clientes Nuevos este mes:</strong> @* Ej: @Model.ClientesNuevos *@</p>
        </div>
    </div>
</div>

<style>
    .card-custom {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .card-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }
</style>
