<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SCALE MODELS S.A.</title>
    <!-- Google Fonts - Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Aplicando la fuente Poppins */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Estilos para la barra de navegación */
        .navbar {
            background-color: #fff;
            padding: 15px 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Sombra para dar profundidad */
        }

        .navbar-brand {
            font-weight: bold;
            color: #009688;
            font-size: 1.75rem;
        }

        .nav-link {
            font-weight: 500;
            color: #333;
            margin-right: 30px; /* Espaciado mayor entre los links */
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: #009688;
            }

        .navbar-nav {
            margin-left: auto; /* Esto alinea los items del navbar a la derecha */
        }

        /* Estilo para el enlace activo */
        .nav-link.active {
            background-color: #6ce5e8; /* Fondo azul */
            color: #fff; /* Letra blanca */
            padding: 5px 10px;
            margin-right: 10px;
            border-radius: 15px;
        }

        /* Espaciado en el header */
        .navbar-nav {
            margin-left: 50px;
        }

        /* Estilo del footer */
        .footer {
            background-color: #009688;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            margin-top: auto;
        }

            .footer a {
                color: #fff;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        /* Ajuste para la visibilidad del contenido */
        .container {
            margin-top: 30px;
            margin-bottom: 50px; /* Aumento del espacio antes del footer */
        }

        /* Asegura que el footer se quede al final */
        .d-flex {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .flex-grow-1 {
            flex-grow: 1;
        }

        /* Espacio adicional antes del footer */
        .main-content-space {
            margin-bottom: 50px; /* Espacio adicional antes del footer */
        }
    </style>
</head>
<body class="d-flex flex-column">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">SCALE MODELS S.A.</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @if(ViewData["ActivePage"] != null && ViewData["ActivePage"].ToString() == "Home") {
                        <text>active</text>
                                                }
" href="/">INICIO</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @if(ViewData["ActivePage"] != null && ViewData["ActivePage"].ToString() == "Productos") {
                        <text>active</text>
                                                }
" href="/productos">PRODUCTOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @if(ViewData["ActivePage"] != null && ViewData["ActivePage"].ToString() == "Pedidos") {
                        <text>active</text>
                                                }
" href="/pedidos">PEDIDOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @if(ViewData["ActivePage"] != null && ViewData["ActivePage"].ToString() == "Reportes") {
                        <text>active</text>
                                                }
" href="/reportes">REPORTES</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5 flex-grow-1 main-content-space">
        @RenderBody() <!-- Aquí se renderiza el contenido de las vistas -->
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 SCALE MODELS S.A. | <a href="#">Política de privacidad</a> | <a href="#">Términos y condiciones</a></p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
